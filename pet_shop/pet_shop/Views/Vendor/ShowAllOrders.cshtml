@{
}

<h1>All Orders:</h1>

<table class="table-primary table-striped col-md-12">
    <thead>
        <tr>
            <th scope="col">order number</th>
            <th scope="col">user id</th>
            <th scope="col">pet id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (pet_shop.Models.Order display in Model)
        {
        <tr>
            <td>@display.order_number</td>
            <td>@display.user_id</td>
            <td>@display.pet_id</td>
            <td>
                <form id="data2" asp-action="RefuseOrder" method="post">
                    <button class="btn-warning" type="submit">Refuse Order</button>
                    <input type="hidden" name="orderNumber" value=@display.order_number />
                    <input type="hidden" name="petId" value=@display.pet_id />
                </form>
            </td>
            <td>
                <form id="data1" asp-action="CloseOrder" method="post">
                    <button class="btn-danger" type="submit">Close Order</button>
                    <input type="hidden" name="orderNumber" value=@display.order_number />
                    <input type="hidden" name="petId" value=@display.pet_id />
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>